#!/bin/sh

if [ -z "$part" -o -z "$image" ]; then
	echo "define \$part and \$image"
	exit 1
fi

if [ ! -e "$part" ]; then
	echo "Partition $part does not exist"
	exit 1
fi

if [ x$ip = xdhcp ]; then
	dhcp
fi

ping $eth0.serverip
if [ $? -ne 0 ] ; then
	echo "Server did not reply! Update aborted."
	exit 1
fi

unprotect $part

echo
echo "erasing partition $part"
echo
erase $part

echo
echo "flashing $image to $part"
echo
tftp $image $part

protect $part
