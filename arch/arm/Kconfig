	bool "ARM Vexpres boards"
	select HAS_DEBUG_LL
	select CPU_V7
	select ARM_AMBA
	select AMBA_SP804
	select CLKDEV_LOOKUP
	select COMMON_CLK

config ARCH_TEGRA
	bool "NVIDIA Tegra"
	select CPU_V7
	select HAS_DEBUG_LL
	select COMMON_CLK
	select COMMON_CLK_OF_PROVIDER
