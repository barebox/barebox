#include <arm/imx6sx-sdb.dts>
#include "imx6sx.dtsi"

/ {
	chosen {
		environment {
			compatible = "barebox,environment";
			device-path = &usdhc4, "partname:barebox-environment";
		};
	};
};

&ocotp {
	barebox,provide-mac-address = <&fec1 0x620 &fec2 0x632>;
};

&usdhc4 {
	#address-cells = <1>;
	#size-cells = <1>;

	partition@e0000 {
		label = "barebox-environment";
		reg = <0xe0000 0x20000>;
	};
};
