	select ARM_AMBA
	select AMBA_SP804
	select COMMON_CLK
	select COMMON_CLK_OF_PROVIDER

config ARCH_ZYNQMP
	bool "Xilinx ZynqMP-based boards"
	depends on 64BIT
	select CPU_V8
	select HAS_DEBUG_LL
	select ARM_SMCCC
	select COMMON_CLK
	select COMMON_CLK_OF_PROVIDER
	select GPIOLIB
	select HAS_MACB

