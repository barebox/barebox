image-$(CONFIG_MACH_MX28EVK) += barebox-freescale-mx28evk-sd.img
FILE_barebox-freescale-mx28evk-2nd.img = start_barebox_freescale_mx28evk.pblx
image-$(CONFIG_MACH_MX28EVK) += barebox-freescale-mx28evk-2nd.img

