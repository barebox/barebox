#include <arm/imx7s-warp.dts>

/ {
	chosen {
		stdout-path = &uart1;

		environment {
			compatible = "barebox,environment";
			device-path = &bareboxenv;
		};
	};

	memory {
		device_type = "memory";
		reg = <0x80000000 0x20000000>;
	};
};

&usdhc3 {
	boot0-partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		barebox@0 {
			label = "barebox";
			reg = <0x0 0x300000>;
		};

		bareboxenv: bareboxenv@300000 {
			label = "bareboxenv";
			reg = <0x300000 0x0>;
		};
	};
};
