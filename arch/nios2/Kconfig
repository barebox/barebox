config NIOS2
	bool
	select HAS_KALLSYMS
	select HAS_MODULES
	select HAVE_CONFIGURABLE_MEMORY_LAYOUT
	default y

config ARCH_TEXT_BASE
	hex
	default 0x00000000

choice
	prompt "Select your board"

config GENERIC
	bool "Generic"
	select NIOS2

endchoice

menu "Board configuration"

config EARLY_PRINTF
	default n
	bool "Enable early printf functions"

endmenu

