# ===========================================================================

quiet_cmd_0size = 0SIZE $@
cmd_0size = : > $@

quiet_cmd_delete = DELETE  $@
      cmd_delete = rm -f $@

quiet_cmd_shipped = SHIPPED $@
cmd_shipped = cat $< > $@

$(obj)/%:: $(src)/%_shipped
	$(call cmd,shipped)

